{
    "manifest_version": 3,
    "name": "Declutter",
    "version": "1.0.0",
    "description": "The productivity chrome extension designed to make you aware of distractions and help you reduce their impact.",
    "author": "Vyas Narasimhan",
    "action": {
        "default_popup": "index.html",
        "default_title": "Productivity"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "tabs",
        "storage",
        "alarms",
        "tabGroups",
        "scripting",
        "activeTab"
    ],
    "content_scripts": [
        {
              "matches": ["<all_urls>"],
              "js": ["js/inject.js"]
        }
    ],
    "host_permissions": ["<all_urls>"],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
}